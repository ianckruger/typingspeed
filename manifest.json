{
    "manifest_version": 3,
    "name": "type speed",
    "version":"1.0",
    "description": "get your active wpm",

    "browser_action": {
        "default__popup": "popup.html",
        "default_icon": "assets/typer.png"
    },

    "permissions":[
        "storage",
        "activeTab",
        "tabs"
    ],

    "content_scripts": [
        {
            "matches":["http://*/*", "https://*/*"],
            "js":["contentScript.js"]
        }
    ],

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    }

}